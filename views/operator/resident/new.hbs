<div class="page-header">
    <h1>Új lakó bejelentése</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.helyszin}}
                has-error
            {{/if}}
        ">
            <label for="name" class="col-lg-2 control-label">Név</label>
            <div class="col-lg-10">
                <input class="form-control" id="name" name="name" placeholder="Teszt Elek" type="text" value="{{data.name}}">
            </div>
            {{#if validationErrors.helyszin}}
            <span class="help-block">{{validationErrors.helyszin.msg}}</span> {{/if}}
        </div>
        <div class="form-group
            {{#if validationErrors.helyszin}}
                has-error
            {{/if}}
        ">
            <label for="description" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="description" name="description">{{data.description}}</textarea>
            </div>
            {{#if validationErrors.helyszin}}
            <span class="help-block">{{validationErrors.helyszin.msg}}</span> {{/if}}
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>
