{{#each messages}}
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        {{this}}
    </div>
{{/each}}

<div class="page-header">
    <h1>Tevékenységek</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Megnevezés</th>
        <th>Energia</th>
        <th>Kedv</th>
        <th>Egészség</th>
        <th>Pénz</th>
    </tr>
    </thead>
    <tbody>
    {{#each activity}}
        <tr>
            <td>{{name}}</td>
            <td>{{alter_energy}}</td>
            <td>{{alter_empotional_wb}}</td>
            <td>{{alter_physical_wb}}</td>
            <td>{{alter_money}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>

<p><a href="/operator/resident/new" class="btn btn-default">Új lakó felvitele</a></p>
