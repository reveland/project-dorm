{{#each messages}}
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        {{this}}
    </div>
{{/each}}

<div class="page-header">
    <h1>Szobák</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Szobaszám</th>
            <th>Foglelt-e</th>
            <th>Lakók</th>
        </tr>
    </thead>
    <tbody>
        {{#each rooms}}
            <tr>
                <td>{{number}}</td>
                <td>{{occupied}}</td>
                <td>{{residents}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/operator/room/new" class="btn btn-default">Új szoba felvitele</a></p>
