<div class="page-header">
    <h1>Új Tevékenység felvétele</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.name}}
                has-error
            {{/if}}
        ">
            <label for="name" class="col-lg-2 control-label">Elnevezés</label>
            <div class="col-lg-10">
                <input class="form-control" id="name" name="name" placeholder="Bambulás" type="text" value="{{data.name}}">
            </div>
            {{#if validationErrors.name}}
            <span class="help-block">{{validationErrors.name.msg}}</span> {{/if}}
        </div>
        <div class="form-group
            {{#if validationErrors.alter_energy}}
                has-error
            {{/if}}
        ">
            <label for="alter_energy" class="col-lg-2 control-label">alter_energy</label>
            <div class="col-lg-10">
                <input class="form-control" id="alter_energy" name="alter_energy" placeholder="-2" type="text" value="{{data.alter_energy}}">
            </div>
            {{#if validationErrors.alter_energy}}
            <span class="help-block">{{validationErrors.alter_energy.msg}}</span> {{/if}}
        </div>
        <div class="form-group
            {{#if validationErrors.alter_empotional_wb}}
                has-error
            {{/if}}
        ">
            <label for="alter_empotional_wb" class="col-lg-2 control-label">alter_empotional_wb</label>
            <div class="col-lg-10">
                <input class="form-control" id="alter_empotional_wb" name="alter_empotional_wb" placeholder="2" type="text" value="{{data.alter_empotional_wb}}">
            </div>
            {{#if validationErrors.alter_empotional_wb}}
            <span class="help-block">{{validationErrors.alter_empotional_wb.msg}}</span> {{/if}}
        </div><div class="form-group
            {{#if validationErrors.alter_physical_wb}}
                has-error
            {{/if}}
        ">
            <label for="alter_physical_wb" class="col-lg-2 control-label">alter_physical_wb</label>
            <div class="col-lg-10">
                <input class="form-control" id="alter_physical_wb" name="alter_physical_wb" placeholder="1" type="text" value="{{data.alter_physical_wb}}">
            </div>
            {{#if validationErrors.alter_physical_wb}}
            <span class="help-block">{{validationErrors.alter_physical_wb.msg}}</span> {{/if}}
        </div>
        <div class="form-group
            {{#if validationErrors.alter_money}}
                has-error
            {{/if}}
        ">
            <label for="alter_money" class="col-lg-2 control-label">alter_money</label>
            <div class="col-lg-10">
                <input class="form-control" id="alter_money" name="alter_money" placeholder="0" type="text" value="{{data.alter_money}}">
            </div>
            {{#if validationErrors.alter_money}}
            <span class="help-block">{{validationErrors.alter_money.msg}}</span> {{/if}}
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>
