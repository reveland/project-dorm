{{#each messages}}
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        {{this}}
    </div>
{{/each}}

<div class="page-header">
    <h1>Tevékenységek</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Név</th>
        <th>alter_energy</th>
        <th>alter_empotional_wb</th>
        <th>alter_physical_wb</th>
        <th>alter_money</th>
    </tr>
    </thead>
    <tbody>
    {{#each activity}}
        <tr>
            <td>{{name}}</td>
            <td>{{alter_energy}}</td>
            <td>{{alter_empotional_wb}}</td>
            <td>{{alter_physical_wb}}</td>
            <td>{{alter_money}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>

<p><a href="/activity/new" class="btn btn-default">Új tevékenység felvitele</a></p>
